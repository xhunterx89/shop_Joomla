<?xml version="1.0" encoding="utf-8"?>
<extension
    type="module"
    version="1.6.0"
    client="site"
    method="upgrade">
<name>Jshopping Filters</name> 
	<creationDate>25.01.2011</creationDate>
    <author>MAXXmarketing GmbH</author>
    <authorEmail>marketing@maxx-marketing.net</authorEmail>
    <authorUrl>http://www.webdesigner-profi.de</authorUrl>
    <copyright></copyright>
    <license>Open Source License, GNU GPL</license>
    <version>3.0.1</version>
	<description>Displays filters of shop.</description>
	<files>
		<filename module="mod_jshopping_filters">mod_jshopping_filters.php</filename>
        <filename>tmpl/default.php</filename>
	</files>
    <languages>
        <language
            tag="en-GB">en-GB.mod_jshopping_filters.ini</language>
		<language
            tag="de-DE">de-DE.mod_jshopping_filters.ini</language>
		<language
            tag="ru-RU">ru-RU.mod_jshopping_filters.ini</language>
    </languages>     
    <config>
        <fields name="params">
            <fieldset name="basic">  
                <field
                    name="show_manufacturers"
                    type="radio"
                    default="1"
                    label="SHOW MANUFACTURERS"
                    description="SHOW MANUFACTURERS">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>
                <field
                    name="show_categorys"
                    type="radio"
                    default="1"
                    label="SHOW CATEGORYS"
                    description="SHOW CATEGORYS">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>
                <field
                    name="show_prices"
                    type="radio"
                    default="1"
                    label="SHOW PRICES"
                    description="SHOW PRICES">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>
                <field
                    name="show_characteristics"
                    type="radio"
                    default="1"
                    label="SHOW CHARACTERISTICS"
                    description="SHOW CHARACTERISTICS">
                    <option
                        value="0">JNO</option>
                    <option
                        value="1">JYES</option>
                </field>                                
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />                               
            </fieldset> 
        </fields>
    </config>       
</extension>